<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <LinearLayout
        android:background="@color/shen_sky_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="采集器编号:"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <com.zh.metermanagement.view.ClearEditText
                android:id="@+id/cet_collectorNumbers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_et"
                android:maxLines="1"
                android:padding="3dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="13dp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_collectorNumbers"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_bg_blue"
            android:text="扫描\n输入"
            android:textColor="@drawable/btn_text_color_blue_w"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/shen_sky_blue"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采集器下位电表:"
            android:textColor="@color/black"/>

        <ListView
            android:id="@+id/lv_meterContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="#00000000"
            android:dividerHeight="2dp">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_scan"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_blue_white"
            android:layout_gravity="center"
            android:text="扫描电表"
            android:textColor="@android:color/black"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_blue_white"
            android:layout_gravity="center"
            android:text="保\t存"
            android:textColor="@android:color/black"
            android:textSize="15dp"/>
    </LinearLayout>



</LinearLayout>