<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <com.zh.metermanagement.view.ClearEditText
        android:id="@+id/cet_gone"
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@color/shen_sky_blue">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="旧表资产编号:"
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />

                    <com.zh.metermanagement.view.ClearEditText
                        android:id="@+id/cet_oldAssetNumbers"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_et"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_oldAssetNumbers"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn_bg_blue"
                    android:text="扫描\n输入"
                    android:textColor="@drawable/btn_text_color_blue_w"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="序         号："
                            android:textColor="@android:color/black"
                            android:textSize="12dp" />
                        <TextView
                            android:id="@+id/tv_sequenceNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户编号："
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/tv_userNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名称："
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/tv_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户地址："
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/tv_userAddr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/shen_sky_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="旧表表地址:"
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="旧表止码:"
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <com.zh.metermanagement.view.ClearEditText
                        android:id="@+id/cet_oldAddr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/bg_et"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>
                    <com.zh.metermanagement.view.ClearEditText
                        android:id="@+id/cet_oldElectricity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@drawable/bg_et"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />
                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/btn_oldElectricity"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_bg_blue"
                android:text="红外\n读取"
                android:textColor="@drawable/btn_text_color_blue_w"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:background="@color/shen_sky_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="新表资产编号:"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

                <com.zh.metermanagement.view.ClearEditText
                    android:id="@+id/cet_newAssetNumbersScan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_et"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_newAssetNumbersScan"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_bg_blue"
                android:text="扫描\n输入"
                android:textColor="@drawable/btn_text_color_blue_w"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:background="@color/shen_sky_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="新表表地址:"
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="新表止码:"
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <com.zh.metermanagement.view.ClearEditText
                        android:id="@+id/cet_newAddr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/bg_et"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"/>
                    <com.zh.metermanagement.view.ClearEditText
                        android:id="@+id/cet_newElectricity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@drawable/bg_et"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_newElectricity"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_bg_blue"
                android:text="红外\n读取"
                android:textColor="@drawable/btn_text_color_blue_w"
                android:textSize="12dp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>


        <LinearLayout
            android:background="@color/shen_sky_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="采集器资产编号:"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

                <com.zh.metermanagement.view.ClearEditText
                    android:id="@+id/cet_collectorAssetNumbersScan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_et"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_collectorAssetNumbersScan"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_bg_blue"
                android:text="扫描\n输入"
                android:textColor="@drawable/btn_text_color_blue_w"
                android:textSize="12dp" />
        </LinearLayout>


        <Button

            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg_blue_white"
            android:text="保\t存"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>